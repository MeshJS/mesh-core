        "blakejs": "^1.2.1",
        "json-bigint": "^1.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@types/json-bigint": "^1.0.4",
        "@typescript-eslint/parser": "^5.59.1",
        "jest": "^29.7.0",
