{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "lib": ["DOM", "ESNext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "allowJs": true,
        "target": "es2020",
        "outDir": "dist",
        "declaration": true,
        "noEmit": true,
        "declarationDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**/*"]
}
